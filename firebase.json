{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/services",
        "destination": "/services.html"
      },
      {
        "source": "/products",
        "destination": "/products.html"
      },
      {
        "source": "/about",
        "destination": "/index.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      }
    ]
  }
}
